---
import YouTubeIcon from './icons/YouTubeIcon.astro';
import TwitterIcon from './icons/TwitterIcon.astro';
import GitHubIcon from './icons/GitHubIcon.astro';
import LinkedinIcon from './icons/LinkedinIcon.astro';
---

<a href='https://www.youtube.com/@SignLanguageTech' target='_blank' rel='noopener noreferrer'>
  <span class='sr-only'>Sign Language Tech YouTube</span>
  <YouTubeIcon height='32px' width='32px' />
</a>
<a href='https://twitter.com/MiladVafaeifard' target='_blank' rel='noopener noreferrer'>
  <span class='sr-only'>Follow Me on Twitter</span>
  <TwitterIcon height='32px' width='32px' />
</a>
<a href='https://github.com/miladvafaeifard' target='_blank' rel='noopener noreferrer'>
  <span class='sr-only'>Go to Milad's GitHub</span>
  <GitHubIcon height='32px' width='32px' />
</a>
<a href='https://www.linkedin.com/in/miladvafaeifard' target='_blank' rel='noopener noreferrer'>
  <span class='sr-only'>Go to Milad's LinkedIn</span>
  <LinkedinIcon height='32px' width='32px' />
</a>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

</style>