---
import PageTitleBase from '@astrojs/starlight/components/PageTitle.astro';
import LastUpdatedBase from '@astrojs/starlight/components/LastUpdated.astro';

const { authors } = Astro.locals.starlightRoute.entry.data;

const processedAuthors = authors.map((author) =>
  typeof author === 'string' ? { name: author } : author
);
---

<div class='page-header'>
  <div class='page-title'>
    <PageTitleBase />
  </div>

  <LastUpdatedBase />

  {
    processedAuthors.length > 0 && (
      <div class='authors-container'>
        {processedAuthors.map((author) => (
          <div class='author-item'>
            {author.picture && (
              <div class='author-avatar'>
                <img src={author.picture} alt={author.name} />
              </div>
            )}
            <div class='author-info'>
              {author.url ? (
                <a
                  href={author.url}
                  class='author-name'
                  target='_blank'
                  rel='noopener'
                >
                  {author.name}
                </a>
              ) : (
                <span class='author-name'>{author.name}</span>
              )}
              {author.title && <span class='author-title'>{author.title}</span>}
            </div>
          </div>
        ))}
      </div>
    )
  }
</div>

<style>
  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .date-info {
    font-size: 0.95rem;
    color: var(--sl-color-gray-3);
    margin-bottom: 0.75rem;
    font-weight: 400;
  }

  .page-title {
    margin-bottom: 1.5rem;
  }

  .authors-container {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .author-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .author-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .author-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    font-weight: 500;
    color: var(--sl-color-accent);
    text-decoration: none;
    font-size: 1.15rem;
  }

  a.author-name:hover {
    text-decoration: underline;
  }

  .author-title {
    font-size: 0.9rem;
    color: var(--sl-color-gray-3);
    line-height: 1.2;
  }

  /* Make responsive for mobile */
  @media (max-width: 768px) {
    .authors-container {
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .authors-container {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
