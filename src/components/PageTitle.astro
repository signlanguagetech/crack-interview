---
import Default from "@astrojs/starlight/components/PageTitle.astro";
import { getCurrentLocale, getTranslation, formatDate } from "../utils/i18n";

const data = Astro.locals.starlightRoute.entry.data;
const { authors, createdDate } = data;

// Get current locale using our utility
const locale = getCurrentLocale(Astro);

// Get translations using our utility
const authorsLabel = getTranslation(locale, 'components.pageTitle.authors');
const createdLabel = getTranslation(locale, 'components.pageTitle.created');
---

<div class="page-header">
  <div class="page-title">
    <Default>
      <slot />
    </Default>
  </div>

  <div class="page-meta">
    {
      authors && (
        <div class="authors">
          <span class="meta-label">{authorsLabel}:</span>
          <div class="authors-list">
            {authors.map((author) => (
              <span class="author-tag">{author}</span>
            ))}
          </div>
        </div>
      )
    }

    {
      createdDate && (
        <div class="date">
          <span class="meta-label">{createdLabel}:</span>
          <span class="date-value">{formatDate(createdDate, locale)}</span>
        </div>
      )
    }
  </div>
</div>

<style>
  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .page-title {
    margin-bottom: 1rem;
  }

  .page-meta {
    display: flex;
    gap: 2rem;
    align-items: center;
    font-size: 0.9rem;
    color: var(--sl-color-gray-2);
  }

  .authors,
  .date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .meta-label {
    font-weight: 500;
    color: var(--sl-color-gray-1);
  }

  .authors-list {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .author-tag {
    background-color: var(--sl-color-gray-6);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.85rem;
    color: var(--sl-color-gray-1);
  }

  .date-value {
    color: var(--sl-color-gray-2);
  }

  /* Make responsive for mobile */
  @media (max-width: 600px) {
    .page-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style> 
