---
import PageTitleBase from '@astrojs/starlight/components/PageTitle.astro';
import LastUpdatedBase from '@astrojs/starlight/components/LastUpdated.astro';
import AuthorProfile from '../AuthorProfile.astro';

const { authors } = Astro.locals.starlightRoute.entry.data;
---

<div class='page-header'>
  <div class='page-title'>
    <PageTitleBase />
  </div>

  <LastUpdatedBase />

  <div class='authors-container'>
    {authors.map((author) => <AuthorProfile author={author} />)}
  </div>
</div>

<style>
  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
  }

  .date-info {
    font-size: 0.95rem;
    color: var(--sl-color-gray-3);
    margin-bottom: 0.75rem;
    font-weight: 400;
  }

  .page-title {
    margin-bottom: 1.5rem;
  }

  .authors-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .authors-container > * {
    flex: 1 1 calc(33.333% - 1rem);
    min-width: 250px;
  }

  /* Make responsive for mobile */
  @media (max-width: 768px) {
    .authors-container {
      gap: 1.25rem;
    }

    .authors-container > * {
      flex: 1 1 calc(50% - 0.625rem);
      min-width: 200px;
    }
  }

  @media (max-width: 480px) {
    .authors-container {
      flex-direction: column;
      gap: 1rem;
    }

    .authors-container > * {
      flex: 1 1 100%;
    }
  }
</style>
